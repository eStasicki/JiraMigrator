{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "JiraMigrator",
	"version": "0.4.0",
	"identifier": "com.jiramigrator.app",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build"
	},
	"app": {
		"windows": [
			{
				"title": "Jira Migrator",
				"width": 1280,
				"height": 800,
				"minWidth": 900,
				"minHeight": 600,
				"resizable": true,
				"fullscreen": false,
				"center": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["nsis", "dmg"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
